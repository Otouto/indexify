.in-modal
    display none
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    cursor pointer
    background-color rgba(0, 0, 0, 0.35)
    z-index 9999

    &_show
        display block

    &-popup
        top 0
        right 0
        bottom 0
        left 0
        background-color #B2D0FF
        margin auto
        position fixed
        height 80%
        width 80%

    &-map-container
        position relative
        width 100%
        height 100%
